    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                "--collision_energy_level", "le", 
                "--loss_fcn_type", "CrossEntropy", 
                "--device", "cpu",
                "--ion_mode", "pos",
                "--type_model", "ionmode" 
            ]
        }
    ]
